{
  "name": "quikder-auth",
  "version": "0.1.0",
  "description": "handle authentication",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fercho343/quikder-auth.git"
  },
  "author": "Fernando Lopez <fernandojalope343@icloud.com> (https://github.com/fercho343)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fercho343/quikder-auth/issues"
  },
  "homepage": "https://github.com/fercho343/quikder-auth#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@apollo/client": "^3.8.8",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@expo/vector-icons": "^13.0.0",
    "@react-native-async-storage/async-storage": "^1.18.2",
    "@react-native-community/hooks": "^3.0.0",
    "@react-navigation/native": "^6.1.9",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/apollo-upload-client": "^17.0.5",
    "@types/react": "~18.2.14",
    "@types/react-native": "0.70.0",
    "apollo-upload-client": "^17.0.0",
    "bowser": "^2.11.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "expo-apple-authentication": "~6.1.0",
    "expo-crypto": "~12.4.1",
    "expo-device": "~5.4.0",
    "expo-image": "~1.3.5",
    "expo-local-authentication": "~13.4.1",
    "expo-notifications": "~0.20.1",
    "expo-secure-store": "~12.3.1",
    "graphql": "^15.8.0",
    "i18next": "^23.7.8",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.4",
    "react": "18.2.0",
    "react-hook-form": "^7.48.2",
    "react-native": "0.72.6",
    "react-native-builder-bob": "^0.20.0",
    "react-native-paper": "^5.11.3",
    "react-native-toast-message": "^2.1.8",
    "release-it": "^15.0.0",
    "styled-components": "^6.1.1",
    "subscriptions-transport-ws": "^0.11.0",
    "typescript": "^5.0.2",
    "verity-quik": "^0.1.4"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
